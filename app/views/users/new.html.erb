<% provide(:title, 'Sign up') %>
<h2>ユーザー新規登録</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "ユーザー名（半角英数）", class: 'form-control' %>
      <%= f.text_field :name %>

      <%= f.label :email, "メールアドレス", class: 'form-control' %>
      <%= f.email_field :email %>

      <%= f.label :password, "パスワード", class: 'form-control' %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "パスワード（確認用）", class: 'form-control' %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "新規登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>